{
	"name": "WateringApp",
	"description": "Basic app to track the watering and others of your plants",
	"author": "Gergely Varga",
	"version": "0.0.1",
	"private": true,
	"license": "UNLICENSED",
	"config": {
		"default_api_path": "/",
		"default_public_path": "/"
	},
	"scripts": {
		"test": "npm run lint && npm run unit -- --coverage --verbose",
		"start": "cross-env NODE_ENV=development webpack serve --host 0.0.0.0 --disable-host-check --config build/webpack.config.js",
		"start:localhost": "cross-env DEV_HOST=http://localhost:3000 npm start",
		"build": "cross-env NODE_ENV=production npm run bundle",
		"pages": "build-storybook -c .storybook -o public",
		"lint": "eslint --max-warnings 0 --ext .js,.vue src test build .storybook \"*.config.js\"",
		"unit": "cross-env NODE_ENV=test jest",
		"analyze": "cross-env ANALYZE=true npm run build",
		"bundle": "webpack --progress --config build/webpack.config.js",
		"storybook": "start-storybook -p 3333",
		"dev": "echo Deprecated script. Use 'npm start' instead. && npm start",
		"dev:localhost": "echo Deprecated script. Use 'npm run start:localhost' instead. && npm run start:localhost",
		"storybook:build": "echo Deprecated script. Use 'npm run pages' instead. && npm run pages",
		"unit:watch": "echo Deprecated script. Use 'npm run unit -- --watch' instead. && npm run unit -- --watch"
	},
	"devDependencies": {
		"@babel/core": "^7.13.14",
		"@babel/eslint-parser": "^7.13.14",
		"@babel/preset-env": "^7.13.12",
		"@fortawesome/fontawesome-svg-core": "^1.2.34",
		"@fortawesome/vue-fontawesome": "^3.0.0-4",
		"@lion/dialog": "^0.11.2",
		"@storybook/addon-essentials": "^6.2.1",
		"@storybook/addons": "^6.2.1",
		"@storybook/builder-webpack5": "^6.2.1",
		"@storybook/vue3": "^6.2.1",
		"@vue/compiler-sfc": "^3.0.10",
		"@vue/test-utils": "^2.0.0-rc.3",
		"axios": "^0.21.1",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"babel-preset-vue": "^2.0.2",
		"bulma": "^0.9.2",
		"core-js": "^3.10.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.2.0",
		"eslint": "^7.23.0",
		"eslint-plugin-vue": "^7.8.0",
		"html-webpack-plugin": "^5.3.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.4.0",
		"postcss": "^8.2.9",
		"postcss-loader": "^5.1.0",
		"postcss-preset-env": "^6.7.0",
		"resolve-url-loader": "^3.1.2",
		"sass": "^1.32.8",
		"sass-loader": "^11.0.1",
		"terser-webpack-plugin": "^5.1.1",
		"vue": "^3.0.10",
		"vue-i18n": "^9.0.0",
		"vue-jest": "^5.0.0-alpha.8",
		"vue-loader": "^16.2.0",
		"vue-router": "^4.0.4",
		"vuex": "^4.0.0",
		"webpack": "^5.28.0",
		"webpack-bundle-analyzer": "^4.4.0",
		"webpack-cli": "^4.6.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^5.15.3",
		"@riovir/wc-fontawesome": "^0.1.6"
	}
}
